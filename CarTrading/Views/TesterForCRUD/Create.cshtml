<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            @if (Model != null && !string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">
                    @Model.ErrorMessage
                </div>
            }

            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" name="Product_title" placeholder="Post Title" required>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" name="Product_desc" placeholder="Give description of your product" required></textarea>
            </div>
            <div class="form-group">
                <label>Price</label>
                <input type="text" class="form-control" name="Product_price" placeholder="Type the price" required>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input type="text" class="form-control" name="Product_loc" placeholder="Type a city" required>
            </div>
            <div class="form-group">
                <label>Colour</label>
                <select class="form-control" name="Product_color" required>
                    <option selected>Please choose a color</option>
                    <option value="blue">Blue</option>
                    <option value="green">Green</option>
                    <option value="red">Red</option>
                    <option value="yellow">Yellow</option>
                    <option value="pink">Pink</option>
                    <option value="sky blue">Sky Blue</option>
                    <option value="gold">Gold</option>
                    <option value="silver">Silver</option>
                    <option value="black metallic">Black Metallic</option>
                    <option value="white">White</option>
                </select>
            </div>
            <div class="form-group">
                <label>Make</label>
                <input type="text" class="form-control" name="Product_make" placeholder="Type the car make" required>
            </div>
            <div class="form-group">
                <label>Model</label>
                <input type="text" class="form-control" name="Product_model" placeholder="Type the car model" required>
            </div>
            <div class="form-group">
                <label>Year</label>
                <input type="number" min="1900" max="2099" step="1" value="2000" class="form-control" name="Product_year" required />
            </div>
            <div class="form-group">
                <label>Mileage</label>
                <input type="text" class="form-control" name="Product_mileage" placeholder="Key in your mileage" required>
            </div>
            <div class="form-group">
                <label>Transmission</label>
                <select class="form-control" name="Product_trans" required>
                    <option selected>Please choose a transmission</option>
                    <option value="manual">Manual</option>
                    <option value="automatic">Automatic</option>
                </select>
            </div>
            <div class="form-group">
                <label>Fuel Type</label>
                <select class="form-control" name="Product_fuel" required>
                    <option selected>Please choose a fuel type</option>
                    <option value="hybrid">Hybrid</option>
                    <option value="diesel">Diesel</option>
                    <option value="gasoline">Gasoline</option>
                    <option value="electric">Electric</option>
                </select>
            </div>
            <div class="form-group">
                <label>Image URL</label>
                <input type="text" class="form-control" name="Product_url" placeholder="Upload an image">
            </div>
            <div class="pt-2">
                <button class="btn btn-success" type="submit">Create Post</button>
            </div>
        </form>
    </div>
</div>
